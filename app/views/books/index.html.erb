<h1>
  <strong>Books</strong>
</h1>




<table>
  <thead>
    <tr>
      <th>Table</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
       <tr>
          <th><%= book.title %></th>
 　　    　　<th><%= book.body %></th>
 　　       <th><%= link_to "Show", book_path(book) %></th>
 　　       <th><%= link_to "Edit", edit_book_path(book) %></th>
 　　       <th><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
     　　 </tr>
  　 <% end %>
  </tbody>

</table>

<h2>
  <strong>New Book</strong>
</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Tiile</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
　<br>
  <%= f.submit 'Create Book' %>
<% end %>