<h1>
  <strong>Books</strong>
</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    
  </thead>
  
  
</table>

<% @books.each do |book| %>

  <p>タイトル</p>

  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  
<% end %>

<h1>
  <strong>New Book</strong>
</h1>

<%= form_with model: Book.new do |f| %>
  <h4>Tiile</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>